# Uncomment the next line to define a global platform for your project
#source 'https://cdn.cocoapods.org/'
source 'https://mirrors.tuna.tsinghua.edu.cn/git/CocoaPods/Specs.git'
install! 'cocoapods', :generate_multiple_pod_projects => true
platform :ios, '11.0'

target 'ColorHammer' do
  # Comment the next line if you don't want to use dynamic frameworks
  # use_frameworks!
  use_modular_headers!

  # Pods for SmartMattress
  pod 'SnapKit', '~> 5.0.1', :inhibit_warnings => true
  pod 'AFNetworking', '~> 4.0.0', :inhibit_warnings => true
  pod 'YYText', :inhibit_warnings => true
  pod 'SwiftyJSON', '~> 5.0.0', :inhibit_warnings => true
  pod 'PKHUD', '~> 5.3.0', :inhibit_warnings => true
  
end
